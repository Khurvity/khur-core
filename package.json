{
  "name": "@khurvity/khur-core",
  "description": "Core library for Khur",
  "version": "0.1.0",
  "author": [
    {
      "name": "Ciensprog"
    }
  ],
  "keywords": [
    "bot",
    "discord",
    "khur",
    "library",
    "nodejs",
    "typescript"
  ],
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "module": "dist/lib.esm.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "prettier": {
    "printWidth": 100,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "size-limit": [
    {
      "path": "dist/lib.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/lib.esm.js",
      "limit": "10 KB"
    }
  ],
  "peerDependencies": {},
  "devDependencies": {
    "@size-limit/preset-small-lib": "^4.10.2",
    "husky": "^6.0.0",
    "size-limit": "^4.10.2",
    "tsdx": "^0.14.1",
    "tslib": "^2.2.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "node-notifier": "^8.0.1"
  }
}
